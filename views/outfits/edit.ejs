<%- include('../partials/header') %>

<form id="edit-form" action="/outfits/<%= outfit._id%>?_method=PUT" method="POST">
    <div class="mb-3"><br>
        <label for="exampleFormControlInput1" class="form-label">
            ⚜️ Title
        </label>
        <input type="text" name="title" class="form-control" id="exampleFormControlInput1" value="<%= outfit.title %>">
    </div>
    <div class="mb-3"><br>
        <label for="exampleFormControlInput1" class="form-label">
            🔗 Link your fit:
        </label>
        <input type="text" name="image" class="form-control" id="exampleFormControlInput1">
    </div>
    <div class="mb-3"><br>
        <label for="exampleFormControlTextarea1" class="form-label">
            🪩 What did you do?
        </label>
        <textarea class="form-control" name="agenda" id="exampleFormControlTextarea1" rows="3" placeholder="<%= outfit.agenda %>"></textarea>
    </div>
    <div class="mb-3"><br>
        <label for="exampleFormControlTextarea1" class="form-label">
            🕴🏻 Write a description of your fit:
        </label>
        <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3" placeholder="<%= outfit.description %>"></textarea>
    </div><br>
    <label>🤠 Mood
        <select name="mood">
            <option value="😊">😊</option>
            <option value="🥹">🥹</option>
            <option value="🤪">🤪</option>
            <option value="🥸">🥸</option>
            <option value="🥳">🥳</option>
            <option value="😍">😍</option>
            <option value="😤">😤</option>
            <option value="🥺">🥺</option>
            <option value="😭">😭</option>
            <option value="😵">😵</option>
            <option value="🫠">🫠</option>
            <option value="🤒">🤒</option>
        </select>
    </label><br><br>
    <label>Sizing (optional):</label><br>
    <label>🧥 Outerwear
        <select name="outerwear">
            <option value="N/A">N/A</option>
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
        </select>
    </label><br>
    <label>👚 Top
        <select name="top">
            <option value="N/A">N/A</option>
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
        </select>
    </label><br>
    <label>👖 Bottom (women's size)
        <select name="womBottom">
            <option value="N/A">N/A</option>
            <option value="23">23</option>
            <option value="24">24</option>
            <option value="25">25</option>
            <option value="26">26</option>
            <option value="27">27</option>
            <option value="28">28</option>
            <option value="29">29</option>
            <option value="30">30</option>
            <option value="31">31</option>
            <option value="32">32</option>
            <option value="33">33</option>
        </select>
    </label>
    <label>👖 Bottom (men's size)
        <select name="manBottom">
            <option value="N/A">N/A</option>
            <option value="26">26</option>
            <option value="28">28</option>
            <option value="29">29</option>
            <option value="30">30</option>
            <option value="31">31</option>
            <option value="32">32</option>
            <option value="33">33</option>
            <option value="34">34</option>
            <option value="36">36</option>
            <option value="38">38</option>
            <option value="40">40</option>
        </select>
    </label><br><br>
    <input class="btn btn-outline-success" id="update-btn" type="submit" value="Update">
</form>

<%- include('../partials/footer') %>