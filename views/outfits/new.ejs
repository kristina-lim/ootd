<%- include('../partials/header') %>


<form id="new-form" action="/outfits" method="POST">
    <br><label>Title:</label>
    <input type="text" name="title"><br><br>
    <!-- <label>Add Image:</label>
    <input type="text" name="image">
    <input type="submit" value="submit"><br> -->
    <!-- <label>for img but i go back to it later</label> -->
    <label>What did you do today?</label><br>
    <textarea name="agenda" cols="20" rows="5"></textarea><br><br>
    <label>Write a description of your fit:</label><br>
    <textarea name="description" cols="20" rows="5"></textarea><br><br> <!--Type what you did throughout the day What brands did you wear?-->
    <label>Mood
        <select name="mood">
            <option value="😊">😊</option>
            <option value="🥹">🥹</option>
            <option value="🤪">🤪</option>
            <option value="😍">😍</option>
            <option value="😤">😤</option>
            <option value="😭">😭</option>
            <option value="🫠">🫠</option>
            <option value="🤒">🤒</option>
        </select>
    </label><br>
    <label>When did you wear this?
        <input type="date" name="date" value="<%= dtDate %>">
    </label><br><br>
    <label>Sizing (optional):</label><br>
    <label>Outerwear
        <select name="outerwear">
            <option value="N/A">N/A</option>
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
        </select>
    </label><br>
    <label>Top
        <select name="top">
            <option value="N/A">N/A</option>
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
        </select>
    </label><br>
    <label>Bottom (women's size)
        <select name="womBottom">
            <option value="N/A">N/A</option>
            <option value="23">23</option>
            <option value="24">24</option>
            <option value="25">25</option>
            <option value="26">26</option>
            <option value="27">27</option>
            <option value="28">28</option>
            <option value="29">29</option>
            <option value="30">30</option>
            <option value="31">31</option>
            <option value="32">32</option>
            <option value="33">33</option>
        </select>
    </label>
    <label>Bottom (men's size)
        <select name="manBottom">
            <option value="N/A">N/A</option>
            <option value="26">26</option>
            <option value="28">28</option>
            <option value="29">29</option>
            <option value="30">30</option>
            <option value="31">31</option>
            <option value="32">32</option>
            <option value="33">33</option>
            <option value="34">34</option>
            <option value="36">36</option>
            <option value="38">38</option>
            <option value="40">40</option>
        </select>
    </label><br><br>
    <input type="submit" value="Add Outfit!">
</form>

<%- include('../partials/footer') %>